<!DOCTYPE html>
<html lang="en">

<body>
    <script>
       function factorial(n){
  let answer = 1;
  if (n == 0 || n == 1){
    return answer;
  }
  else if(n > 1){
    for(var i = n; i >= 1; i--){
      answer = answer * i;
    }
    return answer;
  }
  else{
    return "number has to be positive."
  }  
}
var n = parseInt(prompt("Enter a number:"));
answer = factorial(n)
document.write("Factorial of " + n + " : " +answer);
    </script>
</body>
</html>
